[data-page='interest-group']
	.header-color
		width 100%
		height 100px
		margin-bottom 10px
	.header
		text-align center
		.image-wrapper
			display inline-block
			vertical-align middle
			margin-right 120px
			height 300px
			width 300px
			background rgba(black, .07)
			border-radius 100%
			overflow hidden
			position relative
			.image
				width 100%
				height 100%
				background-size cover
				background-position center
				filter: grayscale(100%)
			.color-overlay
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				z-index 10
		.group-info
			display inline-block
			vertical-align middle
			h1.group-name
				margin-bottom 12px
			button
				padding 8px 16px
				color white
				font-weight bold
				font-size 120%
				border-radius 3px
				border none
				cursor pointer
	.body
		width 100%
		max-width 1100px
		margin auto
		margin-top 80px
		text-align center
		padding-bottom 120px
		aside.updates
			max-width 35%
			display inline-block
			margin-right 10%
			vertical-align top
			text-align left
			box-sizing border-box
			padding 15px
			padding-right 0
			max-height 700px
			overflow-y auto
			direction rtl
			.update-post
				width 100%
				box-sizing border-box
				padding 20px 30px
				border-radius 3px
				margin 10px 0
				&:first-child
					margin-top 0
				h5.post-header
					margin-bottom 7px
				p.post-text
					font-size 100%
					line-height 120%
					margin-bottom 10px
				h6.post-date
					color #555
		.main
			width 55%
			display inline-block
			vertical-align top
			padding-top 15px
			float right
			article.description
				text-align left
				p#description
					font-size 120%
					line-height 140%
					margin-bottom 20px
				h5.president
					margin-bottom 60px
			.image-updates
				.image-post
					width 100%
					height 300px
					background rgba(black, .07)
					margin-bottom 20px