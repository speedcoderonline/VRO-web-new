[data-page="add-student"]

.main-content
	h2.page-heading
		margin 30px 0
		text-align center
	form
		margin auto
		text-align center
		width 90%
		max-width 800px

		.input-wrapper
			display grid
			grid-template-columns 1fr 1fr
			grid-gap 10px
		
		*
			color black
			
		input[type='checkbox']
			width auto
			cursor pointer
			width 15px
			height 15px
			margin 20px 0
			margin-right 10px
			box-shadow none
			
		label
			font-size 120%
			cursor pointer
		
		input, select
			border none
			padding 15px 30px
			box-sizing border-box
			font-size 100%
			box-shadow 0 0 10px rgba(black, .1)
			
		select
			cursor pointer
		
		button[type='submit']
			color white
			background $darkgreen
			border none
			padding 15px 30px
			width 90%
			max-width 400px
			box-sizing border-box
			font-weight bold
			font-size 120%
			cursor pointer
			margin-top 15px
			margin-bottom 50px
			grid-column 1
			
	@media(max-width 1023px)
		form
			.input-wrapper
				grid-template-columns 1fr