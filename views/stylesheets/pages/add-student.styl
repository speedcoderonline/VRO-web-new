[data-page="classpoints"]

.main-content
	h2
		margin 30px 0
		text-align center
	form
		margin auto
		text-align center
		width 90%
		max-width 800px

		.input-wrapper
			display grid
			grid-column-start 1
			grid-column-end 3
			grid-template-columns 1fr 1fr
			grid-gap 10px
		
		*
			color black
			
		input[type='checkbox']
			width auto
			cursor pointer
			width 15px
			height 15px
			margin 20px 0
			margin-right 10px
			
		label
			color white
			font-size 120%
			cursor pointer
		
		input, select
			border none
			padding 15px 30px
			box-sizing border-box
			font-size 100%
			
		select
			cursor pointer
		
		button[type='submit']
			color white
			background $darkgreen
			border none
			padding 15px 30px
			width 400px
			box-sizing border-box
			font-weight bold
			font-size 120%
			cursor pointer
			margin-top 15px
			margin-bottom 50px
			grid-columd 1