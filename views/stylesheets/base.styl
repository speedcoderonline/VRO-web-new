//Importing variables file
@import 'variables'


//Setting fonts for VRO-web
font-face-create('BebasNeue', 'BebasNeue-Book', 200, normal, "otf")
font-face-create('BebasNeue', 'BebasNeue-Regular', 600, normal, "otf")
font-face-create('BebasNeue', 'BebasNeue-Bold', 800, normal, "otf")
font-face-create('CenturyGothic', 'CenturyGothic')
font-face-create('CenturyGothic', 'CenturyGothic-Bold', bold)
font-face-create('CenturyGothic', 'CenturyGothic-Italic', normal, italic)

//All attributes defaults
*
	margin 0
	font-family 'CenturyGothic'
	line-height 100%
	color white

h1,h2,h3,h4,h5,h6
	font-family 'BebasNeue'
	
h1
	font-size 400%
h2
	font-size 300%
h3
	font-size 250%
h4
	font-size 160%
	font-weight normal
h5
	font-size 125%
	font-weight normal
h6
	font-size 100%
	font-weight normal
	
p
	font-size 115%
	

nav a
	font-family 'BebasNeue'
	
a
	cursor pointer
	text-decoration none
	
img
	user-drag none 
	user-select none
	-moz-user-select none
	-webkit-user-drag none
	-webkit-user-select none
	-ms-user-select none
	
input
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
	
a.link-logo
	height 50px
	width 50px
	background url('../images/vit-logga-liten.png') center no-repeat
	background-size contain
	display block
	
.main-logo
	height 120px
	width 120px
	background url('../images/vit-logga.png') center no-repeat
	background-size contain
	
.authed-btn
	background white
	color black
	padding 15px
	width 200px
	font-family 'BebasNeue'
	font-weight bold
	font-size 150%
	cursor pointer