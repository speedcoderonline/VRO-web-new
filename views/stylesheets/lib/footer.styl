//Footer stylus

footer
	padding 0
	background $darkgreen
	font-size 17px
	color rgba(white, .7)
	width 100%
		
	.footer-content
		box-sizing border-box
		padding 50px 80px
		display flex
		p, a
			font-size 90%
			margin-bottom 20px
			clear both
			float left
			
			&:last-child
				margin-bottom 0
		h6
			font-size 130%
			font-weight bold
			margin-bottom 30px
		.left-content
			flex 2
			.link-logo
				margin-bottom 20px
		.middle-content
			flex 1
		.right-content
			flex 1
	.lower-footer
		text-align center
		padding 30px 0
		background rgba(white, .05)
		p
			font-size 90%
			
	@media(max-width 414px)
		.footer-content
			flex-direction column
			
		.footer-content > *
			margin-bottom 40px
			
			h6
				margin-bottom 20px
		.lower-footer
			padding 20px 0
			p
				font-size 60%